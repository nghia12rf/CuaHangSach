<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cửa hàng sách</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <!-- Brand -->
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                Cửa Hàng Sách
            </a>

            <!-- Mobile Toggle -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navigation Items -->
            <div class="collapse navbar-collapse" id="navbarMain">
                <!-- Left Navigation - Only Home -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            Trang chủ
                        </a>
                    </li>
                </ul>

                <!-- Right Navigation - Cart & Login/Logout -->
                <ul class="navbar-nav ms-auto">
                    <!-- Cart Section -->
                    <li class="nav-item">
                        <div class="nav-link">
                            @{ Html.RenderAction("GioHangPartial", "DatHang"); }
                        </div>
                    </li>

                    <!-- User Section -->
                    @if (Session["kh"] != null)
                    {
                        // User is logged in
                        var kh = Session["kh"] as CuaHangSach.Models.tbl_KhachHang;
                        <li class="nav-item">
                            <span class="nav-link text-light">
                                Chào, @kh.HoTen
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DangXuat", "NguoiDung")">
                                Đăng xuất
                            </a>
                        </li>
                    }
                    else
                    {
                        // User is not logged in
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("DangNhap", "NguoiDung")">
                                Đăng nhập
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content" style="padding-top: 80px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Bài thực hành ASP.NET MVC</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>