@{
    ViewBag.Title = "Đặt hàng";
    var kh = ViewBag.KhachHang as CuaHangSach.Models.tbl_KhachHang;
    var gh = ViewBag.GioHang as CuaHangSach.Models.GioHang;
}

<h2>Thông tin đặt hàng</h2>

@using (Html.BeginForm("TaoDonDatHang", "DatHang", FormMethod.Post))
{
    <h3>Thông tin khách hàng</h3>
    <table class="table table-bordered">
        <tr>
            <td style="width: 150px;">Họ tên:</td>
            <td><b>@kh.HoTen</b> (Tài khoản: @kh.TenKH)</td>
        </tr>
        <tr>
            <td>Địa chỉ:</td>
            <td>@kh.DiaChi</td>
        </tr>
        <tr>
            <td>Điện thoại:</td>
            <td>@kh.SoDienThoai</td>
        </tr>
        <tr>
            <td>Ngày đặt:</td>
            <td>@DateTime.Now.ToShortDateString()</td>
        </tr>
        <tr>
            <td>Ngày giao:</td>
            <td>
                <input type="date" name="txtDate" required />
                @if (ViewBag.LoiNgay != null)
                {
                    <span class="text-danger">@ViewBag.LoiNgay</span>
                }
            </td>
        </tr>
    </table>

    <hr />

    <h3>Chi tiết đơn hàng</h3>
    <table class="table">
        <tr style="font-weight: bold;">
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
        @foreach (var item in gh.lst)
        {
            <tr>
                <td>@item.iMaSach</td>
                <td>@item.sTenSach</td>
                <td>@item.iSoLuong</td>
                <td>@String.Format("{0:0,0}", item.dDonGia)</td>
                <td>@String.Format("{0:0,0}", item.dThanhTien)</td>
            </tr>
        }
        <tr style="font-weight: bold; color: red; font-size: 20px;">
            <td colspan="4" style="text-align: right;">Tổng cộng:</td>
            <td>@String.Format("{0:0,0}", gh.TongThanhTien()) VNĐ</td>
        </tr>
    </table>

    <div style="text-align: center; margin-top: 20px;">
        <input type="submit" value="Đồng ý đặt hàng" class="btn btn-lg btn-primary" />
    </div>
}